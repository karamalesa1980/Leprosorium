
	
	

	  

	
<% @results.each do |row| %>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= row['title'] %></h3>
  </div>
  <div class="panel-body">
    <%= row['content'] %>
    <br>

    <br>
    <h5><strong> Дата создания: <%= row['datetime']%></strong></h5>
    <br>
    <a href="/post/<%= row['id'] %>">Оставить коментарий</a>
    
  </div>
</div>
<br>
<% end %>